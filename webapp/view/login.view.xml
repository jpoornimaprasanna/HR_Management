<mvc:View controllerName="HrAndEmp.HR_Management.controller.login" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.m.layout">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
			
				<content>
					<VBox>
					<f:SimpleForm editable="true" layout="ResponsiveGridLayout" maxContainerCols="4" > 
						<Label text="Emp Id" />
						<Input type="Number" placeholder="Enter Emp Id"  id="Id" liveChange="checkValidation" required="true" width="50%"/>
						<Label text="Password" />
						<Input value="" type="Password" placeholder="Enter Password"  id="Password" required="true" width="50%"/>
						<Label/>
						<HBox alignContent="Center">
						<Button text="Submit" width="100%" class="sapUiLargeMarginBegin sapUiLargeMarginBottom" id="Button" press="onPress"/>
						</HBox>
					</f:SimpleForm>
					</VBox>
				</content>
					
			</Page>
		</pages>
	</App>
</mvc:View>